<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- VideoView para mostrar el video del ejercicio -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="281dp"
        android:layout_height="177dp" />

    <!-- LinearLayout para contener el nombre y el grupo muscular -->
    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <!-- TextView para mostrar el nombre del ejercicio -->
        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- TextView para mostrar el grupo muscular -->
    </LinearLayout>

    <!-- BotÃ³n para agregar el ejercicio -->
    <Button
        android:id="@+id/agregarButton"
        android:layout_width="281dp"
        android:layout_height="54dp"
        android:text="@string/add" />
</LinearLayout>
