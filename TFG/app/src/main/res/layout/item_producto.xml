<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Imagen del producto -->
    <ImageView
        android:id="@+id/imagenProductogeneral"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/proteinasimagen" />

    <!-- Nombre del producto -->
    <TextView
        android:id="@+id/productonombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/product_name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imagenProductogeneral"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Marca del producto -->
    <TextView
        android:id="@+id/marca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/product_brand2"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/imagenProductogeneral"
        app:layout_constraintTop_toBottomOf="@id/productonombre"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BotÃ³n de agregar producto -->
    <ImageView
        android:id="@+id/addProducto"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />
</androidx.constraintlayout.widget.ConstraintLayout>
