<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.ConfirmarCuenta">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lunes"
        android:scaleType="centerCrop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/user_summary_text"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="47dp"
                android:padding="14dp"
                android:text="User Summary"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/progress_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Continuar" />

            <!-- Add other elements here if needed -->

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imagengenero"
        android:layout_width="350dp"
        android:layout_height="284dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="326dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:elevation="15dp"
        android:src="@drawable/mujer" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="345dp"
        android:indeterminate="false"
        android:elevation="17dp"
        android:max="100"
        android:progress="100"
        android:progressTint="@color/lavanda" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
